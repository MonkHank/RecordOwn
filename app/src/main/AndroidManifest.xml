<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.monk.aidldemo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.monk.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.monk.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".service.MyAidlService"
            android:enabled="true"
            android:exported="true"
            android:process=":aidl">
        </service>
        <service
            android:name=".service.MyIntentService"
            android:exported="false">
        </service>
        <service
            android:name=".service.MyStartService"
            android:enabled="true"
            android:exported="true">
        </service>
        <service android:name=".binder.messenger.MyMessengerService"/>

        <activity
            android:name=".activity.ScrollingActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.TabbedActivity"
            android:label="@string/title_activity_tabbed"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.monk.eventdispatch.EventDispatchActivity"/>
    </application>

</manifest>