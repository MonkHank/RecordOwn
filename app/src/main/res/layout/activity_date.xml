<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/appbar_toolbar"/>

    <com.peoplesafe.views.AddEquipmentItem
        android:id="@+id/flStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tvName="起始日期：" />

    <com.peoplesafe.views.AddEquipmentItem
        android:id="@+id/flEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tvName="结束日期：" />

    <com.peoplesafe.views.AddEquipmentItem
        android:id="@+id/flDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:etContentHint="请输入相隔天数"
        app:etVisibility="visible"
        app:tvName="相隔天数："
        app:tvVisibility="gone" />

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvChole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvChole2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvChole3"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>