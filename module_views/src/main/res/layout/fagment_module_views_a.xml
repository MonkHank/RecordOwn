<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.monk.moduleviews.views.AddEquipmentItem
        android:id="@+id/flStartDate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tvName="起始日期：" />

    <com.monk.moduleviews.views.AddEquipmentItem
        android:id="@+id/flEndDate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/flStartDate"
        app:tvName="结束日期：" />

    <com.monk.moduleviews.views.AddEquipmentItem
        android:id="@+id/flDays"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/flEndDate"
        app:etContentHint="请输入相隔天数"
        app:etVisibility="visible"
        app:tvName="相隔天数："
        app:tvVisibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>